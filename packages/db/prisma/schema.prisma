generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  contests     Contest[]
  questions    Question[]
  submissions  Submission[]
  participants Participant[]

  @@index([email])
}

// one contets can have multiple questions, one question can be in multiple contests
model Contest {
  id          String   @id @default(uuid())
  title       String
  description String
  startDate   DateTime
  startTime   String
  endTime     String
  userId      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  questions    QuestionsInContests[]
  user         User                  @relation(fields: [userId], references: [id])
  submissions  Submission[]
  participants Participant[]
}

enum QuestionType {
  MCQ
  DSA
}

model Question {
  id   String       @id @default(uuid())
  text String
  type QuestionType

  points Int
  userId String

  options   Option[] // in case of mcq
  testCases Testcase[] // in case of dsa
  funcName  String // func name should be same when user submitting the code

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contests QuestionsInContests[]
  user     User                  @relation(fields: [userId], references: [id])
}

model QuestionsInContests {
  contestId  String
  questionId String

  assignedAt DateTime @default(now())

  contest  Contest  @relation(fields: [contestId], references: [id])
  question Question @relation(fields: [questionId], references: [id])

  @@id([contestId, questionId])
}

model Option {
  id         String  @id @default(uuid())
  questionId String
  text       String
  isCorrect  Boolean

  question Question @relation(fields: [questionId], references: [id])

  createdAt DateTime @default(now())
}

model Testcase {
  id         String @id @default(uuid())
  questionId String

  input          Json // [] this should be array of arguments and each el in this array is an arg
  expectedOutput Json
  isHidden       Boolean @default(false)

  question Question @relation(fields: [questionId], references: [id])

  createdAt DateTime @default(now())
}

enum SubmissionStatus {
  PENDING
  COMPLETED
}

model Submission {
  id          String           @id @default(uuid())
  userId      String
  contestId   String
  score       Int              @default(0)
  status      SubmissionStatus @default(PENDING)
  answers     Json
  startedAt   DateTime         @default(now())
  submittedAt DateTime?

  user    User    @relation(fields: [userId], references: [id])
  contest Contest @relation(fields: [contestId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, contestId])
}

enum ParticipantStatus {
  REGISTERED
  PARTICIPATING
  DISQUALIFIED
}

model Participant {
  id        String            @id @default(uuid())
  userId    String
  contestId String
  status    ParticipantStatus @default(REGISTERED)
  score     Int               @default(0)
  rank      Int?

  user    User    @relation(fields: [userId], references: [id])
  contest Contest @relation(fields: [contestId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, contestId])
}
